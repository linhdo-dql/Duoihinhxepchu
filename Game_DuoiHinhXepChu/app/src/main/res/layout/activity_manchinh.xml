<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD500"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#40C4FF"
            android:minHeight="?attr/actionBarSize"
            android:outlineSpotShadowColor="#ffffff"
            android:theme="?attr/actionBarTheme"
            tools:targetApi="p" />

        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/sback" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/txt1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/back"
            android:layout_toRightOf="@id/back"
            android:src="@drawable/coin"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/txtTien"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/txt1"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/txt1"
            android:layout_toRightOf="@+id/txt1"
            android:textColor="#FFFF00"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginStart="5dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/txt2"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="100dp"
            android:layout_toEndOf="@id/txtTien"
            android:layout_toRightOf="@id/txtTien"
            android:layout_alignBaseline="@id/txt1"
            android:gravity="center_horizontal"
            android:src="@drawable/cup"/>

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/txt2"
            android:layout_alignBaseline="@id/txt2"
            android:textColor="#FFFF00"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:layout_toEndOf="@id/txt2"
            android:gravity="center"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/anhcauhoi">

            <ImageView
                android:id="@+id/anhdebai1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                tools:ignore="InvalidId" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5sp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:progress="50"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custorm_prbtinhgio"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txtctl"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="2"
            android:text="@string/p_n"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <GridView
            android:id="@+id/listCTL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txtctl"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <GridView
            android:id="@+id/listGY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="422dp"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/btnGoiY"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="#7EEA4F"
            android:text="@string/g_i"
            android:textSize="20sp"
            android:layout_marginLeft="15dp" />

        <Button
            android:id="@+id/btnDoiCauHoi"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:background="#92CDFA"
            android:text="@string/i_c_u_h_i"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></Button>
    </LinearLayout>


</LinearLayout>