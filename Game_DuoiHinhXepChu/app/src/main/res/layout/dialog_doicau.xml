<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@drawable/emo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/txtKQ"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Exactly!!!"
            android:textColor="#FF5252"
            android:textSize="50sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txtDAPAN"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnNextCH"
            android:text="Câu tiếp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_vang"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowRadius="5"
            android:shadowDx="1"
            android:shadowDy="5"
            android:shadowColor="#000000"
            android:layout_marginLeft="10sp"/>
        <Button
            android:id="@+id/RestartCH"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/btnNextCH"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:text="Lưu Lại"
            android:background="@drawable/btn_lam"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowRadius="5"
            android:shadowDx="1"
            android:shadowDy="5"
            android:shadowColor="#000000"
            />
    </RelativeLayout>

</LinearLayout>